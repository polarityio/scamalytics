<div class="d-flex align-items-center justify-content-end copy-btn-container">
  <button class="btn copy-btn p-action" {{action "copyData"}} title="Copy Information to Clipboard">
    {{fa-icon icon="clipboard" fixedWidth=true}}
  </button>
  <div class="copy-success-message {{if showCopyMessage "visible" "hidden"}}">
    {{fa-icon icon="check" fixedWidth=true class="copy-success-icon"}}
    Copied Information.
  </div>
</div>

<div id={{concat "scamalytics-container-" uniqueIdPrefix}}>
  <h1 class="p-title">{{fa-icon icon="tachometer" fixedWidth=true}} Risk Info</h1>
  <a href="https://scamalytics.com/ip/{{block.entity.value}}">View in Scamalytics  {{fa-icon "external-link-square" fixedWidth=true class="external-icon"}}</a>
  <div class="mt-1">
    <span class="p-key">Risk:</span>
    <span class="p-value">{{details.risk}}</span>
  </div>
  <div>
    <span class="p-key">Fraud Score:</span>
    <span class="p-value">{{details.score}} / 100</span>
  </div>
  <div class="p-footnote mt-2">
    API Usage: {{details.credits.used}} / {{details.credits.remaining}}
  </div>
</div>